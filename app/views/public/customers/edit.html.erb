<div class="container">
  <div class="row">
      <div class="col-lg-5 text-center mb-3">
         <h3 class="head-line title_h2 text-center">会員情報編集</h3>
      </div>
  </div>
  
 <%= form_with model: @customer, url:  update_customer_public_customers_path ,method: :patch do |f| %>


     <div class="row field">
        <%= f.label :"氏名" %>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
     </div>
     
     <div class="row field"> 
        <%= f.label :"フリガナ" %>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
     </div>
     
     <div class="row field">
        <%= f.label :"郵便番号" %>
        <%= f.text_field :postal_code %>
     </div>
     
     <div class="row field">
        <%= f.label :"住所" %>
        <%= f.text_field :address %>
     </div>
     
     <div class="row field">
        <%= f.label :"電話番号" %>
        <%= f.text_field :telephone_number %>
     </div>
     
     <div class="row field"> 
        <%= f.label :"メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
     </div>

          <%= f.submit "編集内容を保存する", class: "btn btn-success" %>
          <%= link_to '退会する', confirm_withdraw_public_customers_path, class: " btn btn-danger" %>
      
     <% end %>

</div>


    
  