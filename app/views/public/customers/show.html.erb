<div class="container">
  <div class="row">
<h2>マイページ</h2>

<span>登録情報</span>

<span><%= link_to "編集する", customers_information_edit_public_customers_path, class: "btn btn-success" %></span>

<table class="table table-bordered table-condensed">
        <tr>
          <th>お名前</th>
          <td><%= @customer.last_name + @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
     
     <div>  
     注文履歴<%= link_to " 一覧を見る", public_orders_path,class: "glyphicon glyphicon-folder-open btn btn-info" %>
     </div>
  
  </div>
</div>