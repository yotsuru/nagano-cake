<h2>注文履歴詳細</h2>

<% if @order.present? %>
    
    注文情報
  	    <table>
          <tbody>
              <tr>
                <th>注文日</th>
          	  <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
              </tr>
              <tr>
              　<th>配送先</th>
                <td><%= @order.postal_code %><br>
                	  <%= @order.address %><br>
                	  <%= @order.name %>
                </td>
              </tr>
              <tr>
              　<th>支払方法</th>
                <td><%= @order.payment_method %></td>
              </tr>
           </tbody>
        </table>
   

    
     請求情報
       <table>
            <tr>
              <th>商品合計</th>
              <td><%= total_price(@order_details).to_s(:delimited) %></td>
            </tr>
            <tr>
              <th>配送料</th>
              <td><%= @order.postage.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th>ご請求額</th>
              <td><%= @order.total_price.to_s(:delimited) %></td>
            </tr>
        </table>
   
  
    	注文内容
        <table>
         <thead>
  	      <tr>
  	      	<th>商品</th>
  	        <th>単価(税込)</th>
  	      	<th>個数</th>
  	      	<th>小計</th>
  	      </tr>
         </thead>
        	<tbody>
        	<% @order_details.each do |order_detail| %>
            <tr>
  	        <td><%= order_detail.item.name %></td>
  	        <td><%= (order_detail.item.price).to_s(:delimited) %></td>
  	        <td><%= order_detail.amount %></td>
  	        <td><%= total_price(order_detail).to_s(:delimited) %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
    <% if customer_signed_in? %>
      <%= link_to "注文履歴一覧へ戻る", customers_orders_path %>
    <% else %>
      <%= link_to "会員詳細へ戻る", admin_customer_path %>
    <% end %>
  <% else %>
    <p>注文履歴がありません。</p>
  <% end %>