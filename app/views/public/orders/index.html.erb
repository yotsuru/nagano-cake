 <div class="container">
   
 <h2>注文履歴一覧</h2>
      <% if @orders.present? %>
  <div class="row">
    <div class="col-lg-12">
        <table class="table table-hover table-bordered table-condensed">
          <thead>
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>注文詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>
    		          <%= order.created_at.strftime('%Y/%m/%d') %>
    		        </td>
    		        <td>
    		          <%= order.postal_code %><br>
    		          <%= order.address %><br>
    		          <%= order.receiver %>
    		        </td>
    		        <td>
    		          <% order.order_details.each do |order_detail| %>
    		          	<%= order_detail.item.name %><br>
    		          <% end %>
    		        </td>
    		        <td>
    		          <%= order.total_price.to_s(:delimited) %>円
    		        </td>
    		        <td>
       	          <%= link_to "表示する",  public_order_path(order.id), class: " btn btn-primary" %>
       	        </td>
              </tr>
            <% end %>
          </tbody>
        </table>
       
        <div class="text-center justify-content-center col-lg-12"><%= paginate @orders %></div>
        
      <% else %>
        <p>注文履歴がありません。</p>
      <% end %>
     </div>
   </div>
</div>