<h3>商品一覧</h3>

<table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
        </tr>
      </thead>
      <tbody>
<% @items.each do |item| %>
        <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
               <%= link_to item.name,admin_item_path(item) %>
    		    </td>
            <td>
              <%= item.price.to_s(:delimited) %>
            </td>
        </tr>
      <% end %>
      </tbody>
</table>
<%= link_to "新規登録",  new_admin_item_path, class: " btn btn-primary" %>
<%= paginate @items %>

