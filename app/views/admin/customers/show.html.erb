<h2><%= (@customer.last_name + @customer.first_name) %>さんの会員詳細</h2>


<table class="table table-bordered table-condensed">
   <tr><th></th><th></th></tr>
   
   <tr><td><h3>会員ID</h3></td><td><%= @customer.id %></td></tr>
 
   <tr><td><h3>氏名</h3></td><td><%= @customer.last_name + @customer.first_name %></td></tr>
 
   <tr><td><h3>フリガナ</h3></td><td><%= @customer.last_name_kana + @customer.first_name_kana %></td></tr>
 
   <tr><td><h3>郵便番号</h3></td><td><%= @customer.postal_code %></td></tr>
 
   <tr><td><h3>住所</h3></td><td><%= @customer.address %></td></tr>
 
   <tr><td><h3>電話番号</h3></td><td><%= @customer.telephone_number %></td></tr>
 
   <tr><td><h3>メールアドレス</h3></td><td><%= @customer.email %></td></tr>
   
   <tr>
       <td><h3>会員ステータス</h3></td>
       <td><% if @customer.is_valid == true %>
        <span class="text-muted">退会</span>
           <% else %>
        <span class="text-success">有効</span>
           <% end %>
       </td></tr>
   
</table>

<%= link_to "編集する",edit_admin_customer_path(@customer), class: " btn btn-success" %>