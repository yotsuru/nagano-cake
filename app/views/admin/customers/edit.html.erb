<div class="container">
<h4><%= (@customer.last_name + @customer.first_name) %>さんの会員情報編集</h4>

<%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>

 <div class="row">
    <div calss="col-xs-12">


        <div class="form-group col-xs-9">
        会員ID 
        <%= @customer.id %>
        </div>
        
        <div class="form-group col-xs-9">
        <%= f.label :"氏名" %>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
        </div>
        
        <div class="form-group col-xs-9">
        <%= f.label :"フリガナ" %>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
        </div>
        
        <div class="form-group col-xs-9">
        <%= f.label :"郵便番号" %>
        <%= f.text_field :postal_code %>
        </div>
 
        <div class="form-group col-xs-9">
        <%= f.label :"住所" %>
        <%= f.text_field :address %>
        </div>
 
        <div class="form-group col-xs-9">
        <%= f.label :"電話番号" %>
        <%= f.text_field :telephone_number %>
        </div>
        
        <div class="form-group col-xs-9">
        <%= f.label :"メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        
        <div class="form-group col-xs-9">
        <%= f.label :"会員ステータス" %>
          <%= f.radio_button :is_valid, false %>
        　<%= f.label :is_valid, "有効", {value: :false} %>
        
        　<%= f.radio_button :is_valid, true %>
        　<%= f.label :is_valid, "退会済", {value: :true} %>
        </div>
        
        <%= f.submit "変更を保存", class: " btn btn-success" %>
        
       </div>
     </div>
  </div>
<% end %>
     