<h2><%= (@customer.last_name + @customer.first_name) %>さんの会員情報編集</h2>

<table class="table customer-table">
<%= form_with model: @customer, url:admin_customers_path, method: :patch do |f| %>
        会員ID <%= @customer.id %>
        <%= f.label :"氏名" %>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
     
      
        <%= f.label :"フリガナ" %>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
    
        <%= f.label :"郵便番号" %>
        <%= f.text_field :postal_code %>
     

        <%= f.label :"住所" %>
        <%= f.text_field :address %>
    

        <%= f.label :"電話番号" %>
        <%= f.text_field :telephone_number %>
        
        <%= f.label :"メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</table>
        
        <%= f.label :"会員ステータス" %>
          <%= f.radio_button :is_valid, false %>
        　<%= f.label :is_valid, "有効", {value: :false} %>
        
        　<%= f.radio_button :is_valid, true %>
        　<%= f.label :is_valid, "退会済", {value: :true} %>
        　
        <%= f.submit "変更を保存" %>
<% end %>
     