<h2>注文履歴詳細</h2>

購入者<%= @order.receiver %>
注文日<%= @order.created_at.strftime('%Y/%m/%d') %>
配送先<%= @order.address%>
支払い方法<%= @order.payment_method_i18n %>

<table>
		<thead>
			<tr>
			   <th>商品名</th>
			   <th>単価（税込）</th>
			   <th>数量</th>
			   <th>小計</th>
			</tr>
		</thead>
		
		<tbody>
		<% @order_details.each do |order_detail| %>
					<tr>
			            <td>
			              <%= order_detail.item.name %>
			            </td>
			            <td>
			              <%= (order_detail.price * 1.1).floor.to_s(:delimited) %>
			            </td>
			            <td>
			              <%= order_detail.amount %>
			            </td>
			            <td>
			              <%= (order_detail.price * order_detail.amount * 1.1).floor.to_s(:delimited) %>
			            </td>
			        </tr>
				<% end %>
		</tbody>
</table>

       <table class="table table-hover table-inverse table-bordered mx-auto">
            <tr>
              <th>商品合計</th>
              <td><%= (@order.total_price - @order.postage).to_s(:delimited) %></td>
            </tr>
            <tr>
              <th>配送料</th>
              <td><%= @order.postage.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th>ご請求額</th>
              <td><%= @order.total_price.to_s(:delimited) %></td>
            </tr>
        </table>