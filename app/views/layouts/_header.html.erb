 <header>
   <div class="container">
    
    <div class="row">
      <nav class="nav navbar-nav navbar-left">
        <%= link_to "LOGO", root_path %>
      </nav>
    </div>
      
  
    
     <nav class="nav-item nav navbar-nav navbar-right">
    
    <% if customer_signed_in? %>
     
            ようこそ、<%= current_customer.last_name %>さん！
